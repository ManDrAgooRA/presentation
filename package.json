{
  "name": "asciidoc-presentation-engine",
  "description": "Asciidoc presentation engine",
  "version": "0.0.1",
  "author": "Anton Shevchuk <anton.shevchuk@nixs.com>, Maksym Medvediev <maksym.medvediev@nixs.com>",
  "repository": {
    "type": "git",
    "url": "https://gitlab.nixdev.co/js/edu/presentations/engine.git"
  },
  "dependencies": {
    "@asciidoctor/core": "^2.2.6",
    "@asciidoctor/reveal.js": "^5.0.0-rc.1",
    "asciidoctor": "^2.2.6",
    "browser-sync": "^2.29.1",
    "decktape": "^3.7.0",
    "reveal.js-copycode": "^1.1.1",
    "reveal.js-mermaid-plugin": "^1.1.0"
  },
  "scripts": {
    "postinstall": "ln -s `pwd`/node_modules/reveal.js/ ./javascripts/reveal.js && ln -s `pwd`/node_modules/reveal.js-copycode/plugin/copycode ./javascripts/reveal.js/plugin/copycode && ln -s `pwd`/node_modules/reveal.js-mermaid-plugin/plugin/mermaid ./javascripts/reveal.js/plugin/mermaid",
    "build": "asciidoctor-revealjs",
    "prestart": "asciidoctor-revealjs *.adoc */*.adoc",
    "pdf": "decktape"
  },
  "main": "preview.js",
  "directories": {
    "example": "example"
  },
  "keywords": [
    "asciidoc",
    "reveal.js",
    "slides",
    "presentation"
  ],
  "license": "MIT"
}
